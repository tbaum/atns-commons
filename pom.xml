<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>de.atns.common</groupId>
    <artifactId>parent</artifactId>
    <packaging>pom</packaging>
    <version>1.3.1-SNAPSHOT</version>
    <name>${groupId}:${artifactId}:${version}</name>

    <parent>
        <groupId>de.atns.maven</groupId>
        <artifactId>defaults</artifactId>
        <version>1.2</version>
    </parent>

    <modules>
        <module>cache</module>
        <module>config</module>
        <module>fileutils</module>
        <module>gwt</module>
        <module>gwt-dispatch</module>
        <module>gwt-presenter</module>
        <module>numbergenerator</module>
        <module>schedule</module>
        <module>security</module>
        <module>web</module>
    </modules>

    <scm>
        <connection>scm:git:ssh://git@git.atns.de/common</connection>
        <url>scm:git:ssh://git@git.atns.de/common</url>
    </scm>

    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.7</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>de.atns.common</groupId>
                <artifactId>config</artifactId>
                <version>${version}</version>
            </dependency>
            <dependency>
                <groupId>de.atns.common</groupId>
                <artifactId>cache</artifactId>
                <version>${version}</version>
            </dependency>
            <dependency>
                <groupId>de.atns.common</groupId>
                <artifactId>numbergenerator</artifactId>
                <version>${version}</version>
            </dependency>
            <dependency>
                <groupId>de.atns.common</groupId>
                <artifactId>fileutils</artifactId>
                <version>${version}</version>
            </dependency>
            <dependency>
                <groupId>de.atns.common</groupId>
                <artifactId>security</artifactId>
                <version>${version}</version>
            </dependency>
            <dependency>
                <groupId>de.atns.common</groupId>
                <artifactId>web</artifactId>
                <version>${version}</version>
            </dependency>
            <dependency>
                <groupId>de.atns.common</groupId>
                <artifactId>gwt-dispatch</artifactId>
                <version>${version}</version>
            </dependency>
            <dependency>
                <groupId>de.atns.common</groupId>
                <artifactId>gwt-presenter</artifactId>
                <version>${version}</version>
            </dependency>

            <dependency>
                <groupId>org.eclipse.jetty</groupId>
                <artifactId>jetty-util</artifactId>
                <version>7.0.0.RC6</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <distributionManagement>
        <repository>
            <id>internal</id>
            <url>http://mvn.atns.de/repository/internal/</url>
        </repository>
        <snapshotRepository>
            <id>snapshots</id>
            <url>http://mvn.atns.de/repository/snapshots/</url>
        </snapshotRepository>
    </distributionManagement>

    <repositories>
        <repository>
            <id>snapshots</id>
            <name>Archiva Managed Snapshot Repository</name>
            <url>http://mvn.atns.de/repository/snapshots/</url>
            <releases>
                <enabled>false</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
        <repository>
            <id>internal</id>
            <name>Archiva Managed Internal Repository</name>
            <url>http://mvn.atns.de/repository/internal</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
        <repository>
            <id>central</id>
            <name>Archiva Managed Internal Repository</name>
            <url>http://mvn.atns.de/repository/mirror</url>
        </repository>
    </repositories>

    <pluginRepositories>
        <pluginRepository>
            <id>internal</id>
            <name>Archiva Managed Internal Repository</name>
            <url>http://mvn.atns.de/repository/internal</url>
        </pluginRepository>
        <pluginRepository>
            <id>central</id>
            <name>Archiva Managed Internal Repository</name>
            <url>http://mvn.atns.de/repository/mirror</url>
        </pluginRepository>
    </pluginRepositories>

</project>
